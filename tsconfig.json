{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": false,

    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "allowJs": true,
    // "checkJs": true,

    "strict": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "extensions": [".ts", ".js"]
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules"],
  "lib": ["es6"]
}